{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"],
    },
    "lib": ["esnext"], // Specifies the library files to include
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES6 modules
    "strict": true, // Enables strict type checking and additional type-related checks
    "noUnusedLocals": true, // Warns if a local variable is unused
    "noUnusedParameters": true, // Warns if a function parameter is unused
    "noImplicitReturns": true, // Warns if a function has a missing return type inference
    "noFallthroughCasesInSwitch": true, // Warns if a switch statement has fallthrough cases
    "resolveJsonModule": true, // Enables importing JSON files as modules
    "sourceMap": true // Generates source maps to enable debugging
  },
  "exclude": ["node_modules", "dist"]
}
